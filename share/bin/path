#!/bin/bash

TEXMF="$(pwd)/$*:$(pwd):"

for dir in "$(pwd)/$*/texmf" "$(pwd)/share/texmf"
do
  if [ -d $dir ]; then
    TEXMF="$TEXMF$dir:"
  fi
done

[ -f $*/config ] && . $*/config

for import in $imports
do
  dir="$(pwd)/${import}.tex"
  if [ -d $dir ]; then
    TEXMF="$TEXMF$dir:"
  fi
done

echo $TEXMF
